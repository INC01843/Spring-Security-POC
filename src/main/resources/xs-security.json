{

  "xsappname": "security-demo",

  "tenant-mode": "dedicated",

  "description": "Security profile of called application",

  "scopes": [

    {

      "name": "uua.user",

      "description": "UAA"

    },

    {

      "name": "$XSAPPNAME.YardDisplay",

      "description": "To display Yardmanagemet Details"

    },

    {

      "name": "$XSAPPNAME.YardEdit",

      "description": "To edit YardMangement Details"

    }

  ],

  "role-templates": [

    {

      "name": "yardmgmt_role",

      "description": "UAA",

      "scope-references": ["uaa.user"]

    },

    {

      "name": "Viewer",

      "description": "View Yardmanagement",

      "scope-references": ["$XSAPPNAME.YardDisplay"]

    },

    {

      "name": "Editor",

      "description": "Edit Yardmanagement",

      "scope-references": ["$XSAPPNAME.YardEdit"]

    }

  ]

}